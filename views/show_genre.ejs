<form action="./show_genre">
<label for="genre">Select Genre</label>
<select name="genre" id="genre">
<option value="select">select</option>
<% resul.forEach(function(val){ %>
    <option value="<%= val %>"><%= val %></option>
<% }); %>
</select>
<button type="submit" id="genre_filter">get songs</button>
</form>









<br>
<hr>
<br><br>

<div>

    <!-- show songs of a specific genre -->
 <ul class="list-group list-group-flush songs">
 <% results.forEach(function(song){ %>
                    <li class="list-group-item" aria-current="true"><%= song.title %>
                    <button class="btn btn-outline-dark like"  onclick="likeFunction(this)">
                        <audio controls src="/music/<%= song.title %>.mp3"  type="audio/mpeg"></audio>
                        <i onclick="myFunction(this)" class="far fa-heart"></i>
                    </button>
                    </li> <% }); %>
                </ul>
                </div>












































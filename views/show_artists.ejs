<form action="./show_artists">
<label for="artist">Select Artist</label>
<select name="artist" id="artist">
<option value="select">select</option>
<% result.forEach(function(val){ %>
    <option value="<%= val %>"><%= val %></option>
<% }); %>
</select>
<button type="submit" id="artist_filter">get songs</button>
</form>


<br>
<hr>
<br><br>

<div>

 <ul class="list-group list-group-flush songs">
 <% results.forEach(function(song){ %>
                    <li class="list-group-item" aria-current="true"><%= song.title %><button class="btn btn-outline-dark like " onclick="likeFunction(this)">
                       <audio controls src="/music/<%= song.title %>.mp3"  type="audio/mpeg"></audio>
                        <i onclick="myFunction(this)" class="far fa-heart"></i>
                    </button>
                    </li>
                    <% }); %>
                </ul>
                </div>


    </div>.


</div>
</div>




